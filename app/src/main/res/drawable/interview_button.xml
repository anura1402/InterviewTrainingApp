<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Состояние нажатия -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E35D53"/> <!-- Цвет фона при нажатии -->
            <corners android:radius="8dp"/> <!-- Скругленные углы -->
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp"/> <!-- Отступы внутри кнопки -->
        </shape>
    </item>
    <!-- Состояние фокуса -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#EFA09A"/> <!-- Цвет фона при фокусе -->
            <corners android:radius="8dp"/>
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp"/>
        </shape>
    </item>
    <!-- Состояние по умолчанию -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#EAC1BF"/> <!-- Цвет фона по умолчанию -->
            <corners android:radius="8dp"/>
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp"/>
        </shape>
    </item>
</selector>
